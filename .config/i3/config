# ------------------------- workspace color ------------------------------------------
#
# Set some nice colors      border	 background text              indicator
client.focused              $light2  $neutral_yellow    $dark0            $faded_yellow
client.focused_inactive     $dark0   $dark0     $light1           $dark0
client.unfocused            $dark0   $dark0     $bright_yellow    $bright_orange
client.urgent               $bg      $bg          $magenta $bg
client.placeholder          $cyan      $cyan          $cyan    $cyan


# ------------------------- bar color ----------------------------------------
#
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
      #status_command i3status
      status_command i3blocks -c ~/.config/i3/i3blocks.conf
      position top
      strip_workspace_numbers yes
	  colors
      {
        #                       Border Background Text
		    focused_workspace   $light0    $light0        $bg
		    active_workspace    $dark0    $light0        $dark0
		    inactive_workspace  $dark0    $dark0        $light0 
		    urgent_workspace    $bg    $bg        $bright_yellow
		    background          $dark0
    }
}

# ------------------------ power settings --------------------------------------------------
set $Locker i3lock && sleep 1
set $mode_system System (l) lck, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+q mode "$mode_system"


# ---------------------- audio output -----------------------------------

set $audio_output WH-1000XM2 on (y), WH-1000XM2 off (n)
mode "$audio_output" {
    bindsym y exec pactl set-card-profile bluez_card.70_26_05_88_B4_0D a2dp_sink 
    bindsym n exec pactl set-card-profile bluez_card.70_26_05_88_B4_0D off

    bindsym Return mode "default"
    bindsym Escape mode "default"
    }


# --------------------- Select monitor ------------------------------------------
#
set $monitor [H]DMI1, [e]DP1, [D]ual 
mode "$monitor" {
    bindsym h exec xrandr --output eDP1 --off --output DP1 --off --output DP2 --off --output HDMI1 --primary --mode 1920x1080 --pos 0x0 --rotate normal --output HDMI2 --off --output VIRTUAL1 --off
    bindsym e exec xrandr --output eDP1 --primary --mode 2160x1440 --pos 0x0 --rotate normal --output DP1 --off --output DP2 --off --output HDMI1 --off --output HDMI2 --off --output VIRTUAL1 --off
    bindsym d exec xrandr --output eDP1 --mode 2160x1440 --pos 1920x0 --rotate normal --output DP1 --off --output DP2 --off --output HDMI1 --primary --mode 1920x1080 --pos 0x180 --rotate normal --output HDMI2 --off --output VIRTUAL1 --off

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+m mode "default"
    }


# ----------------- enable/disable screen saver ---------------------------------

set $screen_saver Screen saver on [y], off [n]
mode "$screen_saver" {
    bindsym n exec xset s off
    bindsym y exec xset s 300 

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+s mode "default"
    }


# -------------------------- settings menu --------------------------------------

set $settings [A]udio output, [M]onitor, [S]creen saver, Keyboard [l]ayout  
mode "$settings" {
    # set audio output
    bindsym a mode "$audio_output"
    # set monitor
    bindsym m mode "$monitor"
    # screen saver
    bindsym s mode "$screen_saver"
    # keyboard leyout
    bindsym l exec setxkbmap -layout no ; exec setxkbmap -option caps:escape ; exec setxkbmap -option lv3:lalt_switch
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+period mode "default"
    } 
bindsym $mod+period mode "$settings"






