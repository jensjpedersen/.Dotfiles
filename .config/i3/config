# ==================== Move workspaces ====================
set $mode_move_workspaces [D]iagnostisk fysikk, [F]ysikk, [I]nformatikk, [G]eologi, [K]jerne, Fysikk
mode "$mode_move_workspaces" {
     bindsym d exec --no-startup-id i3-msg rename workspace "1" to "d1";\
               exec --no-startup-id i3-msg rename workspace "2" to "d2";\
               exec --no-startup-id i3-msg rename workspace "3" to "d3";\
               exec --no-startup-id i3-msg rename workspace "4" to "d4";\
               exec --no-startup-id i3-msg rename workspace "5" to "d5";\
               exec --no-startup-id i3-msg rename workspace "6" to "d6";\
               exec --no-startup-id i3-msg rename workspace "7" to "d7";\
               exec --no-startup-id i3-msg rename workspace "8" to "d8";\
               exec --no-startup-id i3-msg rename workspace "9" to "d9";\
               exec --no-startup-id i3-msg rename workspace "10" to "d10"

     bindsym Shift+d exec --no-startup-id i3-msg rename workspace "d1" to "1";\
                     exec --no-startup-id i3-msg rename workspace "d2" to "2";\
                     exec --no-startup-id i3-msg rename workspace "d3" to "3";\
                     exec --no-startup-id i3-msg rename workspace "d4" to "4";\
                     exec --no-startup-id i3-msg rename workspace "d5" to "5";\
                     exec --no-startup-id i3-msg rename workspace "d6" to "6";\
                     exec --no-startup-id i3-msg rename workspace "d7" to "7";\
                     exec --no-startup-id i3-msg rename workspace "d8" to "8";\
                     exec --no-startup-id i3-msg rename workspace "d9" to "9";\
                     exec --no-startup-id i3-msg rename workspace "d10" to "10"

     bindsym f exec --no-startup-id i3-msg rename workspace "1" to "f1";\
               exec --no-startup-id i3-msg rename workspace "2" to "f2";\
               exec --no-startup-id i3-msg rename workspace "3" to "f3";\
               exec --no-startup-id i3-msg rename workspace "4" to "f4";\
               exec --no-startup-id i3-msg rename workspace "5" to "f5";\
               exec --no-startup-id i3-msg rename workspace "6" to "f6";\
               exec --no-startup-id i3-msg rename workspace "7" to "f7";\
               exec --no-startup-id i3-msg rename workspace "8" to "f8";\
               exec --no-startup-id i3-msg rename workspace "9" to "f9";\
               exec --no-startup-id i3-msg rename workspace "10" to "f10"

     bindsym Shift+f exec --no-startup-id i3-msg rename workspace "f1" to "1";\
                     exec --no-startup-id i3-msg rename workspace "f2" to "2";\
                     exec --no-startup-id i3-msg rename workspace "f3" to "3";\
                     exec --no-startup-id i3-msg rename workspace "f4" to "4";\
                     exec --no-startup-id i3-msg rename workspace "f5" to "5";\
                     exec --no-startup-id i3-msg rename workspace "f6" to "6";\
                     exec --no-startup-id i3-msg rename workspace "f7" to "7";\
                     exec --no-startup-id i3-msg rename workspace "f8" to "8";\
                     exec --no-startup-id i3-msg rename workspace "f9" to "9";\
                     exec --no-startup-id i3-msg rename workspace "f10" to "10"

     bindsym i exec --no-startup-id i3-msg rename workspace "1" to "i1";\
               exec --no-startup-id i3-msg rename workspace "2" to "i2";\
               exec --no-startup-id i3-msg rename workspace "3" to "i3";\
               exec --no-startup-id i3-msg rename workspace "4" to "i4";\
               exec --no-startup-id i3-msg rename workspace "5" to "i5";\
               exec --no-startup-id i3-msg rename workspace "6" to "i6";\
               exec --no-startup-id i3-msg rename workspace "7" to "i7";\
               exec --no-startup-id i3-msg rename workspace "8" to "i8";\
               exec --no-startup-id i3-msg rename workspace "9" to "i9";\
               exec --no-startup-id i3-msg rename workspace "10" to "i10"

     bindsym Shift+i exec --no-startup-id i3-msg rename workspace "i1" to "1";\
                     exec --no-startup-id i3-msg rename workspace "i2" to "2";\
                     exec --no-startup-id i3-msg rename workspace "i3" to "3";\
                     exec --no-startup-id i3-msg rename workspace "i4" to "4";\
                     exec --no-startup-id i3-msg rename workspace "i5" to "5";\
                     exec --no-startup-id i3-msg rename workspace "i6" to "6";\
                     exec --no-startup-id i3-msg rename workspace "i7" to "7";\
                     exec --no-startup-id i3-msg rename workspace "i8" to "8";\
                     exec --no-startup-id i3-msg rename workspace "i9" to "9";\
                     exec --no-startup-id i3-msg rename workspace "i10" to "10"

     bindsym g exec --no-startup-id i3-msg rename workspace "1" to "g1";\
               exec --no-startup-id i3-msg rename workspace "2" to "g2";\
               exec --no-startup-id i3-msg rename workspace "3" to "g3";\
               exec --no-startup-id i3-msg rename workspace "4" to "g4";\
               exec --no-startup-id i3-msg rename workspace "5" to "g5";\
               exec --no-startup-id i3-msg rename workspace "6" to "g6";\
               exec --no-startup-id i3-msg rename workspace "7" to "g7";\
               exec --no-startup-id i3-msg rename workspace "8" to "g8";\
               exec --no-startup-id i3-msg rename workspace "9" to "g9";\
               exec --no-startup-id i3-msg rename workspace "10" to "g10"

     bindsym Shift+g exec --no-startup-id i3-msg rename workspace "g1" to "1";\
                     exec --no-startup-id i3-msg rename workspace "g2" to "2";\
                     exec --no-startup-id i3-msg rename workspace "g3" to "3";\
                     exec --no-startup-id i3-msg rename workspace "g4" to "4";\
                     exec --no-startup-id i3-msg rename workspace "g5" to "5";\
                     exec --no-startup-id i3-msg rename workspace "g6" to "6";\
                     exec --no-startup-id i3-msg rename workspace "g7" to "7";\
                     exec --no-startup-id i3-msg rename workspace "g8" to "8";\
                     exec --no-startup-id i3-msg rename workspace "g9" to "9";\
                     exec --no-startup-id i3-msg rename workspace "g10" to "10"

     bindsym k exec --no-startup-id i3-msg rename workspace "1" to "k1";\
               exec --no-startup-id i3-msg rename workspace "2" to "k2";\
               exec --no-startup-id i3-msg rename workspace "3" to "k3";\
               exec --no-startup-id i3-msg rename workspace "4" to "k4";\
               exec --no-startup-id i3-msg rename workspace "5" to "k5";\
               exec --no-startup-id i3-msg rename workspace "6" to "k6";\
               exec --no-startup-id i3-msg rename workspace "7" to "k7";\
               exec --no-startup-id i3-msg rename workspace "8" to "k8";\
               exec --no-startup-id i3-msg rename workspace "9" to "k9";\
               exec --no-startup-id i3-msg rename workspace "10" to "k10"

     bindsym Shift+k exec --no-startup-id i3-msg rename workspace "k1" to "1";\
                     exec --no-startup-id i3-msg rename workspace "k2" to "2";\
                     exec --no-startup-id i3-msg rename workspace "k3" to "3";\
                     exec --no-startup-id i3-msg rename workspace "k4" to "4";\
                     exec --no-startup-id i3-msg rename workspace "k5" to "5";\
                     exec --no-startup-id i3-msg rename workspace "k6" to "6";\
                     exec --no-startup-id i3-msg rename workspace "k7" to "7";\
                     exec --no-startup-id i3-msg rename workspace "k8" to "8";\
                     exec --no-startup-id i3-msg rename workspace "k9" to "9";\
                     exec --no-startup-id i3-msg rename workspace "k10" to "10"
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    }
bindsym $mod+Shift+w mode "$mode_move_workspaces"


# Suspend
bindsym $mod+Shift+s exec --no-startup-id systemctl suspend

# Remove titele bar
default_border pixel 3 

# Scrot screenshot
bindsym --release Print exec --no-startup-id scrot -s -f ~/Pictures/%Y-%m-%d-%H%M%S.png
bindsym --release Shift+Print exec --no-startup-id scrot -s -f -o "/tmp/image.png" && xclip -selection clipboard -t image/png -i /tmp/image.png
bindsym --release Ctrl+Print exec --no-startup-id scrot -u -o "/tmp/image.png" && xclip -selection clipboard -t image/png -i /tmp/image.png
#bindsym Shift+Print --release exec --no-startup-id i3-scrot -sc

